@page "/login"
@model PKS5.Modules.Student
@{
    ViewData["Title"] = "Vasya";
}

<div class="text-center">
    <h1>Логин форма</h1>
</div>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label"></label><br />
                <input ASP asp-for="Login" class="form-control" /><br />
                <span asp-asp-validation-for="Login" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label"></label><br />
                <input asp-for="Password" type="password" class="form-control" /><br />
                <span asp-asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" /><br />
            </div>
        </form>
    </div>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}